<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/edit_contact_imageview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title" />

    <ImageView
        android:id="@+id/editcontact_imageview_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_below="@+id/edit_contact_imageview"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="45dip"
         android:text="@string/addcontact_Name" 
        android:background="@drawable/contact_new"  />
       

    <EditText
        android:id="@+id/editcontact_edittex_contactt"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/editcontact_imageview_contact"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:layout_toRightOf="@+id/editcontact_imageview_contact"
        android:background="@drawable/frame"
        android:hint="@string/hnt_et_name"
        android:paddingLeft="5dp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/editcontact_edittext_number"
        android:layout_width="fill_parent"
        android:layout_height="43dp"
        android:layout_alignLeft="@+id/editcontact_edittex_contactt"
        android:layout_below="@+id/editcontact_edittex_contactt"
        android:layout_marginRight="5dip"
        android:layout_marginTop="20dip"
        android:layout_toRightOf="@+id/editcontact_imageview_contact"
        android:background="@drawable/frame"
        android:hint="@string/hnt_et_mobile"
        android:inputType="numberSigned"
        android:paddingLeft="5dp"
        android:textColor="#ffffff"  />

    <LinearLayout
        android:id="@+id/editcontact_linerlauout_Save_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcontact_imageview_contact"
        android:layout_marginTop="30dip" >

        <Button
            android:id="@+id/editcontact_button_cacel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:text="@string/Cancel"
            android:textColor="#ffffff"
            android:textSize="20sp" 
            android:background="@drawable/add" />

        <Button
            android:id="@+id/editcontact_button_Save_"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dip"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:text="@string/Save"
            android:textSize="20sp"
            android:background="@drawable/add" />
    </LinearLayout>

</RelativeLayout>