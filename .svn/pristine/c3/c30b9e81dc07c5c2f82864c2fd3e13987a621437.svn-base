<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <ImageView
        android:id="@+id/main_imageview_titile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title" />

    <TextView
        android:id="@+id/contactlist"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/addcontact"
        android:layout_alignRight="@+id/addcontact"
        android:layout_below="@+id/addcontact"
        android:layout_marginTop="30dp"
        android:background="@drawable/mainbutton"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal|fill_horizontal"
        android:paddingLeft="60dip"
        android:text="@string/Contact"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/addcontact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_imageview_titile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="126dp"
        android:background="@drawable/mainbutton"
        android:clickable="true"
        android:gravity="center_vertical|center_horizontal|fill_horizontal"
        android:paddingLeft="30dip"
        android:text="@string/AddContact"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:textSize="25sp" />

</RelativeLayout>